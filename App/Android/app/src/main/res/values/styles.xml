<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="ZYButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ZYButton.Blue">
        <item name="android:background">@drawable/button_blue_background</item>
        <item name="android:textColor">@drawable/selector_blue_button_text_color</item>
    </style>

</resources>
